<h1>Create a new event here:</h1>

<%= form_with(model: @event, local: true) do |f|%>
    <div class="card">
        <div class="card-body">
            <div class="mb-3" style="margin: 20px;">
            <%= f.label :name, { class: "form-label"} %>
            <%= f.text_field :name, { class: "form-control", placeholder: "Event Name" } %>
            </div>

            <div class="mb-3" style="margin: 20px;">
            <%= f.label :date, { class: "form-label"} %>
            <%= f.text_field :date, { class: "form-control", placeholder: "Date Format mm/dd/yy" } %>
            </div>

            <div class="mb-3" style="margin: 20px;">
            <%= f.label :location, { class: "form-label"} %>
            <%= f.text_field :location, { class: "form-control", placeholder: "Location" } %>
            </div>

            <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
    </div>
<% end %>