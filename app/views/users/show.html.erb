
<h1 class="text-center">Here is a list of events you have created:</h1>
<div class="row">
    <% @created_events.each do |event|%>
        <div class="column">
            <div class="card m-5" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Name: <%= event.name %></h5>
                    <p class="card-text">Date: <%= event.date %></p>
                    <p class="card-text">Location: <%= event.location %></p>
                    <%= link_to "View Event", event_path(event), method: :get, class: 'btn btn-primary btn-sm' %>
                </div>
            </div>
        </div>
    <% end %>
</div>
<div class="row">
    <h1 class="text-center"> Events Attended In Past:</h1>
    <%if current_user.attended_events.any?%>
        <% past_events.each do |event| %>
            <div class="column">
                <div class="card m-5" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Name: <%= event.name %></h5>
                        <p class="card-text">Date: <%= event.date %></p>
                        <p class="card-text">Location: <%= event.location %></p>
                        <%= link_to "View Event", event_path(event), method: :get, class: 'btn btn-primary btn-sm' %>
                    </div>
                </div>
            </div>
        <% end %>
    <% else %>
        <h2>No past attended events</h2>
    <% end %>
</div>
<div class="row">
    <h1 class="text-center">Upcoming Events:</h1>
    <% if current_user.attended_events.any?  %>
        <% future_events.each do |event| %>
        <div class="column">
                <div class="card m-5" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Name: <%= event.name %></h5>
                        <p class="card-text">Date: <%= event.date %></p>
                        <p class="card-text">Location: <%= event.location %></p>
                        <%= link_to "View Event", event_path(event), method: :get, class: 'btn btn-primary btn-sm' %>
                    </div>
                </div>
        </div>
        <% end %>
    <% else %>
        <h2>No Future events you are attending</h2>
    <% end %>
</div>

