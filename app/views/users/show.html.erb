<h1 class="text-center mt-4">Here is a list of events you have created:</h1>
<div class="row">
    <%if current_user.created_events.any?%>
        <% @created_events.each do |event|%>
            <div class="column">
                <div class="card m-5" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Name: <%= event.name %></h5>
                        <p class="card-text">Date: <%= event.date %></p>
                        <p class="card-text">Location: <%= event.location %></p>
                        <p class="card-text">People Attending: <%= event.event_attendees.count %></p>
                        <%= link_to "View Event", event_path(event), method: :get, class: 'btn btn-primary btn-sm' %>
                    </div>
                </div>
            </div>
        <% end %>
    <% else %>
        <h2 class="m-5 text-center">You have not created any events. Want to create one? 
        <%= link_to "Create Event", new_event_path, method: :get, class: 'btn btn-primary btn-sm' %></h2>
    <% end %>
</div>
<div class="row">
    <h1 class="text-center"> Events you attended in past:</h1>
    <%if current_user.attended_events.any?%>
        <% past_events.each do |event| %>
            <div class="column">
                <div class="card m-5" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Name: <%= event.name %></h5>
                        <p class="card-text">Date: <%= event.date %></p>
                        <p class="card-text">Location: <%= event.location %></p>
                        <%= link_to "View Event", event_path(event), method: :get, class: 'btn btn-primary btn-sm' %>
                    </div>
                </div>
            </div>
        <% end %>
    <% else %>
        <h2>No past attended events</h2>
    <% end %>
</div>
<div class="row">
    <h1 class="text-center">Events that are coming up you want to attend:</h1>
    <% if current_user.attended_events.any?  %>
        <% future_events.each do |event| %>
        <div class="column">
                <div class="card m-5" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Name: <%= event.name %></h5>
                        <p class="card-text">Date: <%= event.date %></p>
                        <p class="card-text">Location: <%= event.location %></p>
                        <%= link_to "View Event", event_path(event), method: :get, class: 'btn btn-primary btn-sm' %>
                    </div>
                </div>
        </div>
        <% end %>
    <% else %>
        <h2>No Future events you are attending</h2>
    <% end %>
</div>